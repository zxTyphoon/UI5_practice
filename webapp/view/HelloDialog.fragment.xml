<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="helloDialog"
        title="Hello {/recipient/name}">
        <content>
            <core:Icon 
                src="sap-icon://hello-world" 
                size="8rem" 
                class="sapUiMediumMargin"/>
            <Text
            text="Hello World!">
            </Text>
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogCloseButtonText}"
                press=".onCloseDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>